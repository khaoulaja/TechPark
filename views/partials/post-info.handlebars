<article class="post">
  <div class="title">
    <h2>{{title}} <span>by {{user.username}} on {{format_date created_at}}</span></h2>
  </div>
  <div class="meta">
     
    <p>{{content}}</p>
    |
    <a href="/post/{{id}}">{{comments.length}} {{ format_plural "comment" comments.length}}</a>
  </div>
</article>