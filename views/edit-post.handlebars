<article>
  <a class="go-back" href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input class="form-control text-capitalize w-auto" name="post-title" type="text" value="{{post.title}}" /><br>
      <textarea class="form-control w-50 h-auto" name="post-content">{{post.content}}</textarea>
    </div>
    <div>
      By you on {{format_date post.created_at}}
      |
      <a href="#comments" class="text-secondary">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a><br>
    </div>
    <button type="submit" class="btn btn-warning">Update post</button>
    <button type="button" class="delete-post-btn btn btn-outline-warning">Delete post</button>
  </form>
</article>
<form class="comment-form">
  <div>
    <textarea class="form-control w-50 my-3" name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-warning">Add comment</button>
  </div>
</form>
{{> comments post.comments}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>